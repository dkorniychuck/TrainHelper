<Window x:Class="Kursach.MealPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MealPlanWindow" Height="650" Width="800">
    <Grid Background="#ffdadada">
        <Border Background="White" MinWidth="400" Padding="30"  Margin="100 80 100 80" VerticalAlignment="Center" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Приклад харчування" FontSize="28" FontWeight="Bold" FontFamily="Tahoma"></TextBlock>
                <Grid Margin="0 10">
                    <Label Content="Кількість калорій: " Margin="0 5 0 0" FontFamily="Tahoma" FontWeight="Bold" FontSize="14"/>
                    <Label x:Name="UserKKal" Content="" HorizontalAlignment="Left" Margin="150 0 0 0" Width="70"  FontFamily="Tahoma" FontSize="13"/>
                    <Button HorizontalAlignment="Right" Margin="11 0" Content="Назад"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Back_Click" />
                </Grid>
                <Grid>
                    <Label Content="Сніданок: " FontFamily="Tahoma" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <Label x:Name="BreakfastName" Margin="70 0 0 0" Width="350" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                </Grid>
                <Label x:Name="BreakfastGrams" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Label x:Name="BreakfastKalories"  Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Label x:Name="BreakfastPFC" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Grid>
                    <Label Content="Обід: " FontFamily="Tahoma" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <Label x:Name="LunchName" Margin="40 0 0 0" Width="350" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                </Grid>
                <Label x:Name="LunchGrams" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Label x:Name="LunchKalories"  Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Label x:Name="LunchPFC" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Grid>
                    <Label Content="Вечеря: " FontFamily="Tahoma" FontWeight="Bold" HorizontalAlignment="Left"/>
                    <Label x:Name="DinnerName" Margin="55 0 0 0" Width="350" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                </Grid>
                <Label x:Name="DinnerGrams" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Label x:Name="DinnerKalories"  Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
                <Label x:Name="DinnerPFC" Content="" FontFamily="Tahoma" HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
