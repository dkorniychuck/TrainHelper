<Page x:Class="Kursach.TrainLegsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="TrainLegsPage">
    <Grid Background="#ffdadada">
        <Border Background="White" MinWidth="400" Padding="30"  Margin="100 80 100 80" VerticalAlignment="Center" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid>
                    <TextBlock Text="Приклад вправ" FontSize="30" FontWeight="Bold" FontFamily="Tahoma"></TextBlock>
                    <Button HorizontalAlignment="Right" Margin="11 0" Content="Назад"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Back_Click"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 35 0 0" Width="130"  Content="    Вправи &#xD;&#xA;з інвентарем" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
                    <Button HorizontalAlignment="Left" Margin="160 35 0 0" Width="120" Content="   Вправи зі своєю &#xD;&#xA;          вагою"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_UpperBodyExcercises_Click" />
                    <Button HorizontalAlignment="Left" Margin="310 35 11 0" Width="130" Content="Вправи на кардіо"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_CardioExcercises_Click" />
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 35 0 0" Width="120" Content="Вправи для спини"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainBack_Click" />
                    <Label HorizontalAlignment="Right" Content="Жим ногами" Margin="0 35 250 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0,37,195,3" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_LegPress_Click"/>
                    <Label HorizontalAlignment="Right" Content="Руминська тяга" Margin="0 40 65 0" VerticalAlignment="Top" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 37 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_RomanianDeadlift_Click" Height="32" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для грудей"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainChest_Click" />
                    <Label HorizontalAlignment="Right" Content="Присідання&#xD;&#xA;зі штангою" Margin="0 0 260 1" VerticalAlignment="Bottom" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 195 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Squats_Click"/>
                    <Label HorizontalAlignment="Right" Content="   Випаи &#xD;&#xA;зі штангою" Margin="0 15 75 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Lunges_Click" Height="32" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для рук"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainBiceps_Click" />
                    <Label HorizontalAlignment="Right" Content="Розгинання ніг" Margin="0 15 250 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 195 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_LegExtensions_Click" Height="32" VerticalAlignment="Top"/>
                    <Label HorizontalAlignment="Right" Content="Згинання ніг" Margin="0,21,75,0" VerticalAlignment="Top" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_LegCurls_Click"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для плечей"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainShoulders_Click" />
                    <Label HorizontalAlignment="Right" Content="Присідання&#xD;&#xA;в тренажері" Margin="0 15 250 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 15 195 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_HackSquats_Click" Height="32" VerticalAlignment="Top"/>
                    <Label HorizontalAlignment="Right" Content="Підйом з гантелями&#xA;         на ікри" Margin="0,15,60,0" VerticalAlignment="Top" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 15 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Calves_Click"/>
                </Grid>
                <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120"  Content="Вправи для ніг" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>