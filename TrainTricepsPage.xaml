<Page x:Class="Kursach.TrainTricepsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="TrainTricepsPage">
    <Grid Background="#ffdadada">
        <Border Background="White" MinWidth="400" Padding="30"  Margin="100 80 100 80" VerticalAlignment="Center" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid>
                    <TextBlock Text="Приклад вправ" FontSize="30" FontWeight="Bold" FontFamily="Tahoma"></TextBlock>
                    <Button HorizontalAlignment="Right" Margin="11 0" Content="Назад"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Back_Click"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 35 0 0" Width="130"  Content="    Вправи &#xD;&#xA;з інвентарем" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
                    <Button HorizontalAlignment="Left" Margin="160 35 0 0" Width="120" Content="   Вправи зі своєю &#xD;&#xA;          вагою"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_UpperBodyExcercises_Click" />
                    <Button HorizontalAlignment="Left" Margin="310 35 11 0" Width="130" Content="Вправи на кардіо"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_CardioExcercises_Click" />
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 35 0 0" Width="120" Content="Вправи для спини"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainBack_Click" />
                    <Button HorizontalAlignment="Right" Margin="0 35 170 0" Width="130" Content="Вправи для біцепса"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainBiceps_Click" Height="32"/>
                    <Button HorizontalAlignment="Right" Margin="0 35 11 0" Width="130"  Content="Вправи для трицепса" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для грудей"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainChest_Click" />
                    <Label HorizontalAlignment="Right" Content="Французьський жим&#xD;&#xA;        зі штангою" Margin="0,0,215,0" VerticalAlignment="Bottom" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 165 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_FrenchPress_Click" Height="32" VerticalAlignment="Top"/>
                    <Label HorizontalAlignment="Right" Content="Розгинання &#xD;&#xA;    у блоці" Margin="0 16 60 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Left" Content="▶️" BorderThickness="1"  Width="40"  Margin="439,20,0,0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_BlockExtension_Click" Height="32" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="94*"/>
                        <ColumnDefinition Width="151*"/>
                    </Grid.ColumnDefinitions>
                    <Button HorizontalAlignment="Left" Margin="0,14,0,1" Width="120"  Content="Вправи для рук" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
                    <Label HorizontalAlignment="Right" Content="Підйом гантелі" Margin="0 20 215 0" VerticalAlignment="Top" FontFamily="Tahoma" Grid.ColumnSpan="2"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 15 165 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_DumbbellLift_Click" Height="32" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label HorizontalAlignment="Right" Content="     Розгинання &#xD;&#xA;зворотнім хватом" Margin="0 13 55 0" VerticalAlignment="Top" FontFamily="Tahoma" Grid.Column="1"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0,15,11,3" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_ReverseExtension_Click" Grid.Column="1"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для плечей"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainShoulders_Click" />
                    <Label HorizontalAlignment="Right" Content="Брусья" Margin="0 13 230 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 15 165 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Bars_Click" Height="32" VerticalAlignment="Top"/>
                    <Label HorizontalAlignment="Right" Content="Жим середнім &#xD;&#xA;      хватом" Margin="0 13 50 0" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 15 11 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_MediumGripBenchPress_Click" Height="32" VerticalAlignment="Top" Grid.Column="1"/>
                </Grid>
                <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для ніг"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainLegs_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
