<Page x:Class="Kursach.TrainBackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="TrainBackPage">
    <Grid Background="#ffdadada">
        <Border Background="White" MinWidth="400" Padding="30"  Margin="100 80 100 80" VerticalAlignment="Center" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <Grid>
                    <TextBlock Text="Приклад вправ" FontSize="30" FontWeight="Bold" FontFamily="Tahoma"></TextBlock>
                    <Button HorizontalAlignment="Right" Margin="11 0" Content="Назад"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Back_Click"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 35 0 0" Width="130"  Content="    Вправи &#xD;&#xA;з інвентарем" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
                    <Button HorizontalAlignment="Left" Margin="160 35 0 0" Width="120" Content="   Вправи зі своєю &#xD;&#xA;          вагою"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_UpperBodyExcercises_Click" />
                    <Button HorizontalAlignment="Left" Margin="310 35 11 0" Width="130" Content="Вправи на кардіо"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_CardioExcercises_Click" />
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 35 0 0" Width="120"  Content="Вправи для спини" Background="Green" FontFamily="Tahoma" FontSize="10"></Button>
                    <Label HorizontalAlignment="Right" Content="Тяга верхнього&#xD;&#xA;        блоку" Margin="0 35 240 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0,37,195,3" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_UpperBlock_Click"/>
                    <Label HorizontalAlignment="Right" Content="Тяга горизонтального&#xA;            блоку" Margin="0 35 55 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 37 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_HorizontalBlock_Click" Height="32" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для грудей"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainChest_Click" />
                    <Label HorizontalAlignment="Right" Content="Підтягування" Margin="0 13 245 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 195 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_PullUps_Click"/>
                    <Label HorizontalAlignment="Right" Content="Важільна тяга" Margin="0 13 75 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Linkage_Click" Height="32" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для рук"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainBiceps_Click" />
                    <Label HorizontalAlignment="Right" Content="Т-тяга" Margin="0 13 265 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 195 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_TPull_Click" Height="32" VerticalAlignment="Top"/>
                    <Label HorizontalAlignment="Right" Content="Тяга гантелей" Margin="0 13 75 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_DumbbellRow_Click"/>
                </Grid>
                <Grid>
                    <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для плечей"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainShoulders_Click" />
                    <Label HorizontalAlignment="Right" Content="Гіперекстензія" Margin="0 13 245 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 195 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Hyperextension_Click"/>
                    <Label HorizontalAlignment="Right" Content="Пуловер" Margin="0 13 95 0" VerticalAlignment="Center" FontFamily="Tahoma"/>
                    <Button HorizontalAlignment="Right" Content="▶️" BorderThickness="1"  Width="40"  Margin="0 20 15 0" FontSize="12" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" Click="Button_Pullover_Click"/>
                </Grid>
                <Button HorizontalAlignment="Left" Margin="0 13 0 0" Width="120" Content="Вправи для ніг"  materialDesign:HintAssist.Foreground="Green" BorderThickness="1" materialDesign:TextFieldAssist.UnderlineBrush="Green" Style="{StaticResource MaterialDesignFlatButton}" Foreground="Green" BorderBrush="Green" FontFamily="Tahoma" FontSize="10" Click="Button_TrainLegs_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
